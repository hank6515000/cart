<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/goods_style_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="13dp"
        android:text="Title Text"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/goods_style_tv"
        app:layout_constraintStart_toEndOf="@+id/goods_style_pic" />

    <TextView
        android:id="@+id/goods_style_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:text="NT $"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/goods_style_title"
        app:layout_constraintTop_toTopOf="@+id/goods_style_price" />

    <TextView
        android:id="@+id/goods_style_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginTop="13dp"
        android:text="Price Text"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/goods_style_tv"
        app:layout_constraintTop_toBottomOf="@+id/goods_style_title" />

    <ImageView
        android:id="@+id/goods_style_pic"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="15dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/buy_cart_ch"
        app:layout_constraintEnd_toStartOf="@+id/goods_style_title"
        app:layout_constraintStart_toEndOf="@+id/buy_cart_ch"
        app:layout_constraintTop_toTopOf="@+id/buy_cart_ch"
        app:srcCompat="@drawable/toxic" />

    <ImageView
        android:id="@+id/buy_cart_sub"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/goods_style_pic"
        app:layout_constraintEnd_toStartOf="@+id/buy_cart_num"
        app:layout_constraintStart_toEndOf="@+id/goods_style_price"
        app:layout_constraintTop_toTopOf="@+id/goods_style_pic"
        app:srcCompat="@drawable/sub" />

    <CheckBox
        android:id="@+id/buy_cart_ch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/buy_cart_num"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="10"
        app:layout_constraintBottom_toBottomOf="@+id/buy_cart_sub"
        app:layout_constraintEnd_toStartOf="@+id/buy_cart_add"
        app:layout_constraintStart_toEndOf="@+id/buy_cart_sub"
        app:layout_constraintTop_toTopOf="@+id/buy_cart_sub" />

    <ImageView
        android:id="@+id/buy_cart_add"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/buy_cart_num"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buy_cart_num"
        app:layout_constraintTop_toTopOf="@+id/buy_cart_num"
        app:srcCompat="@drawable/add" />


</androidx.constraintlayout.widget.ConstraintLayout>

