<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E8E8"
    android:orientation="vertical"
    tools:context=".ui.notifications.member.WalletActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/wallet_back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:gravity="end"
                app:srcCompat="@drawable/red_next"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="小蝦錢包"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/setting"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginRight="25dp"
                app:srcCompat="@drawable/set" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="15dp"
        android:background="#FFFFFF">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginTop="40dp"
                android:text="錢包餘額" />

            <TextView
                android:id="@+id/wallet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="NT$0"
                android:textSize="35dp"
                android:gravity="center_horizontal"
                android:textColor="#ff0000"/>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:id="@+id/add_money"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#FFFFFF">

            <ImageView
                android:id="@+id/textView2"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="#FFFFFF"
                app:srcCompat="@drawable/payout"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="儲值"
                android:gravity="center_horizontal"/>
        </LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="5dp"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:background="#D5E1DCDC"
            app:layout_constraintTop_toBottomOf="@id/message" />

        <LinearLayout
            android:id="@+id/take_out_record"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/textView1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="#FFFFFF"
                app:srcCompat="@drawable/clock_list"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="交易紀錄" />
        </LinearLayout>




    </LinearLayout>
</LinearLayout>