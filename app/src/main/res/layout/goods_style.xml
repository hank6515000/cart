<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/goods_style_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:text="Category"
        app:layout_constraintBottom_toBottomOf="@+id/goods_style_introduce"
        app:layout_constraintEnd_toStartOf="@+id/goods_style_pic"
        app:layout_constraintTop_toTopOf="@+id/goods_style_introduce" />

    <ScrollView
        android:id="@+id/goods_scroll"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goods_style_introduce">

        <TextView
            android:id="@+id/goods_style_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:text="Detail TextView" />
    </ScrollView>

    <TextView
        android:id="@+id/goods_style_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Title Text"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/goods_style_introduce"
        app:layout_constraintTop_toTopOf="@+id/goods_style_tv" />

    <TextView
        android:id="@+id/goods_style_introduce"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Introduce TextView"
        app:layout_constraintStart_toStartOf="@+id/goods_scroll"
        app:layout_constraintTop_toBottomOf="@+id/goods_style_title" />

    <TextView
        android:id="@+id/goods_style_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:paddingBottom="8dp"
        android:text="NT $"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/goods_style_price"
        app:layout_constraintTop_toTopOf="@+id/goods_style_price" />

    <TextView
        android:id="@+id/goods_style_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="55dp"
        android:text="Price Text"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/goods_style_pic"
        app:layout_constraintTop_toTopOf="@+id/goods_style_pic" />

    <ImageView
        android:id="@+id/goods_style_pic"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="13dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/toxic" />

    <TextView
        android:id="@+id/goods_style_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="#97EC645A"
        android:text="remove"
        android:textSize="16dp"
        app:layout_constraintEnd_toStartOf="@+id/goods_style_pic"
        app:layout_constraintTop_toBottomOf="@+id/goods_style_category" />


</androidx.constraintlayout.widget.ConstraintLayout>

